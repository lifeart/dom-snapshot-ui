{{#ui-dropdown class="selection"  selected=@selectedSnapshot onChange=(action 'loadSnapshot')}}
<div class="default text">Snapshot</div>
<i class="dropdown icon"></i>
<div class="menu">
  {{#each model as |snapshot|}}
  <div class="item" data-value="{{snapshot.id}}">
    {{format-name snapshot.name}}
  </div>
  {{/each}}
</div>
{{/ui-dropdown}}

{{#if @selectedSnapshot}}
<button style="margin-left:5px;" class="ui icon button" onclick={{action 'removeSnapshot'}}>
  <i class="trash icon"></i>
</button>
{{#if this.next}}
<button style="margin-left:5px;" class="ui icon button" {{action 'loadSnapshot' this.next.id}}>
  prev
</button>
{{/if}}
{{#if this.prev}}
<button style="margin-left:5px;" class="ui icon button" {{action 'loadSnapshot' this.prev.id}}>
  next
</button>
{{/if}}
{{/if}}
{{yield}}
